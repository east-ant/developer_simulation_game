<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oxquiz">

    <TextView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#393943"
        android:text=""
        tools:layout_editor_absoluteX="-68dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/quiztext"
        android:layout_width="408dp"
        android:layout_height="273dp"
        android:layout_marginTop="140dp"
        android:background="#D4D5D5"
        android:text=""
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/Right"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="#D2D3D3"
        android:onClick="onClickO"
        android:text="O"
        android:textColor="#000000"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Wrong"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="#D2D3D3"
        android:onClick="onClickX"
        android:text="X"
        android:textColor="#000000"
        android:textSize="100dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="252dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:background="#D4D5D5"
        android:text="OX퀴즈!"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"

        android:text="♥"
        android:textColor="#FF0000"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/quiz_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview13" />


    <TextView
        android:id="@+id/textview13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="x"
        android:textColor="#FFFFFF"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView15" />

    <Button
        android:id="@+id/comeback1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="#D2D3D3"
        android:onClick="backmain"
        android:text="돌아가기"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>