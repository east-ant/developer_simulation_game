<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393943"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#393943"
            android:text=""
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/maintime"
            android:layout_width="205dp"
            android:layout_height="55dp"

            android:text="1일차 8:00 시"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"

            android:layout_marginEnd="23dp"
            android:text="이름 : 김세준"
            android:textColor="#FFFFFF"
            android:textSize="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/maintime"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/life_gauge"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="163dp"
            android:layout_height="29dp"
            android:layout_marginEnd="105dp"
            android:layout_marginBottom="80dp"
            android:max="100"
            android:progress="100"
            android:progressBackgroundTint="#D1D2D4"
            android:progressTint="#2A2C31"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maintime" />

        <ProgressBar
            android:id="@+id/happy_gauge"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="80dp"
            android:max="50"
            android:progress="50"
            android:progressBackgroundTint="#D1D2D4"
            android:progressTint="#5C5F64"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/life_gauge"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/Hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:text="체력 : 100/100"
            android:textColor="#FFFFFF"

            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maintime" />

        <TextView
            android:id="@+id/happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="80dp"
            android:text="행복 : 50/50"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Hp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/stduy"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:background="#D4D5D5"
            android:gravity="center"
            android:text="지능     0"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/power"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="10dp"
            android:background="#D4D5D5"
            android:gravity="center"
            android:text="근력     0"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stduy" />

        <TextView
            android:id="@+id/stress"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="10dp"
            android:background="#D4D5D5"
            android:gravity="center"
            android:text="스트레스     0"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hobby" />

        <TextView
            android:id="@+id/hobby"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="10dp"
            android:background="#D4D5D5"
            android:gravity="center"
            android:text="취미     0"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/power" />

        <TextView
            android:id="@+id/D_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="40dp"
            android:text="D-5"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stress" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="55dp"
            android:text="졸업"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/D_day1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout14"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7">



        <ImageView
            android:id="@+id/night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/night"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/house_pic5_____2_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/daybed1"
            android:layout_width="182dp"
            android:layout_height="153dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="127dp"
            android:background="@null"
            android:onClick="daybedclicked"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bed" />

        <ImageButton
            android:id="@+id/nightbed1"
            android:layout_width="182dp"
            android:layout_height="153dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="130dp"
            android:background="@null"
            android:onClick="nightbedclicked"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/nightbed" />

        <ImageView
            android:id="@+id/person2"
            android:layout_width="105dp"
            android:layout_height="117dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="70dp"
            android:src="@drawable/person222"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/person1"
            android:layout_width="220dp"
            android:layout_height="170dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="140dp"
            android:src="@drawable/person_beddown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/weight"
            android:layout_width="86dp"
            android:layout_height="61dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="261dp"
            android:background="@null"
            android:onClick="helth_tap"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/helth_effect2" />

        <ImageView
            android:id="@+id/helth1"
            android:layout_width="218dp"
            android:layout_height="251dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/helth" />

        <ImageView
            android:id="@+id/helth2"
            android:layout_width="218dp"
            android:layout_height="251dp"

            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/helth2_2" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:max="100"
            android:progressBackgroundTint="#D11212"
            android:progressTint="#4A4B4E"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.827" />

        <Button
            android:id="@+id/tapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap!"
            android:background="@null"
            android:backgroundTint="#737171"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageButton
            android:id="@+id/book"
            android:layout_width="46dp"
            android:layout_height="36dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="95dp"
            android:background="@null"
            android:onClick="book_clicked"
            android:scaleType="fitXY"
            android:src="@drawable/book"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/game"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="38dp"
            android:background="@null"
            android:onClick="game_tap"
            android:scaleType="fitXY"
            android:src="@drawable/game"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/optionText1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="40dp"
            android:background="#D4D5D5"
            android:textSize="25dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/night" />

        <TextView
            android:id="@+id/optionText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            android:background="#D4D5D5"
            android:visibility="invisible"
            android:text="게임목표 : 5일뒤에 무사히 졸업시키기 지능수치 최소+20"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/optionText2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:background="#D4D5D5"
            android:visibility="invisible"
            android:text="지능이 높을수록 성공 확률 높음           스트레스 +10 수치당 다음날 행복-10"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionText" />

        <TextView
            android:id="@+id/optionText3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:background="#D4D5D5"
            android:visibility="invisible"
            android:text="체력 0이하로 내려갈시 강제로 다음날 행복 0이하로 내려갈시 배드엔딩"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionText2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout14">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#393943"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/option"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:onClick="option"
            android:src="@drawable/topni2"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>